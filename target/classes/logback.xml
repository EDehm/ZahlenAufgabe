<Configuration>
     <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
         <pattern>
           %d{HH:mm} [%thread] %-5level %logger{36} - %msg%n
          </pattern>
        </encoder>
    </appender>

    <logger name="numbers.App" level="INFO">
         <appender-ref ref="Console"/>
    </logger>
    
    <logger name="numbers.App2" level="Info">
         <appender-ref ref="Console"/>
    </logger>
	
	<logger name="numbers.Rational" level="TRACE">
         <appender-ref ref="Console"/>
    </logger>
	
	<logger name="numbers.RationalTest" level="Info">
         <appender-ref ref="Console"/>
    </logger>
	
	<logger name="numbers.Zahl" level="Info">
         <appender-ref ref="Console"/>
    </logger>
</Configuration>